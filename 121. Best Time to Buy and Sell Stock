class Solution {
public:
    int maxProfit(vector<int>& prices) {
        
        int min_value = prices[0];
        int max_profit = 0;
        for (int i = 1; i < prices.size(); i++){
            int profit = prices[i] - min_value;

            if (profit > max_profit){
                max_profit = profit;
            }

            if (prices[i] < min_value){
                min_value = prices[i];
            }
        }
        return max_profit;
    }
};
